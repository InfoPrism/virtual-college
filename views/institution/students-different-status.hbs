{{#if signupPendingStudents}}

<section>

  <div class="container-fluid">

    <Center>
      <h3><b>Not Verified Students List</b></h3>

    </Center>
    <div class="row">
      <a href="/institution/all-students-different-status/?status=Signup denied" class="btn btn ml-auto mr-0 mb-3"
        style="background-color: #212529; color: #fff;">Denied students</a>


      <table class="table" style="background-color:#D3D3D3;">

        <thead>


          <tr style="background-color: #2F4F4F; color: #fff;">
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th class="large-screen" scope="col">Email</th>
            <th class="large-screen" scope="col">Mobile</th>
            <th class="large-screen" scope="col">Gender</th>
            <!-- <th scope="col">Quantity</th>-->
            <th scope="col">Status</th>
            <th class="large-screen" scope="col">Details</th>
            <th scope="col"></th>

          </tr>
        </thead>
        <tbody>
          {{#each signupPendingStudents}}
          <tr>
            <td style="width: 20%;">{{this.slno}}</td>

            <td style="width: 20%;">{{this.fname}} {{this.lname}}</td>
            <td class="large-screen" style="width: 20%;">{{this.email}}</td>
            <td class="large-screen" style="width: 20%;">{{this.mobile}}</td>
            <td class="large-screen" style="width: 20%;">{{this.gender}}</td>
            <td style="width: 5%;">
              <div class="dropdown">
                <button class="btn btn dropdown-toggle" style="background-color: #696969; color: #fff;" type="button"
                  id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span
                    class="large-screen">Signup</span> Pending</button>
                <div class="dropdown-menu" style="background-color: #696969; " aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" style="color: #fff;"
                    href="/institution/change-student-status/Signup verified/{{this._id}}/Signup pending"
                    onclick="return confirm('Are you sure want to validate {{this.fname}} signup?')">Allow Signup</a>
                  <a class="dropdown-item" style="color: #fff;"
                    href="/institution/change-student-status/Signup denied/{{this._id}}/Signup pending"
                    onclick="return confirm('Are you sure want to deny {{this.fname}} signup?')">Deny Signup</a>
                </div>
              </div>
            </td>
            <td class="large-screen" style="width: 5%;">
              <a onclick="studentInfo('{{this._id}}')" data-toggle="modal" data-target="#studentprofile"
                class="btn btn mt-1" style="background-color: #696969; color: #fff;"><i
                  class="fas fa-info-circle"></i></a>
            </td>

          </tr>
          {{/each}}
        </tbody>
        <hr>
      </table>
      <hr>

    </div>
  </div>

</section>
{{/if}}
