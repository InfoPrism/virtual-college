<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card align-items-center text-center p-3">
                    <img src="{{#if institutionDetails.picture}}/images/institution_profile/{{institutionDetails._id}}.jpg{{else}}/images/school.jpg{{/if}}" alt="{{institutionDetails.name}}" width="150px" height="150px" class="rounded-circle mb-3">
                    <div class="camera-icon" data-toggle="modal" data-target="#choose-image"><i class="far fa-camera" style="margin-top: 10px;"></i></div>
                    <h5 class="card-text">{{institutionDetails.name}}</h5>
                    <div class="text-muted">{{institutionDetails.email}}</div>
                    <div class="text-muted">Joined on {{institutionDetails.date}}</div>
                    <div style="margin-top: 0.85em;">
                        <button class="btn btn-outline-primary" onclick="editToSaveBtn()">Edit</button>
                        <a href="/institution/logout" class="btn btn-primary">Logout</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3">
                    <h4>Number Of Data</h4>
                    <small>Number of Students</small>
                    <a href="/institution/all-students">
                    <div class="progress mb-3 mt-1">
                        <div class="progress-bar bg-primary" role="progressbar" style="width:100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">{{noData.[0]}} Students</div>
                    </div>
                    </a>
                    <small>Number of Tutors</small>
                    <a href="/institution/all-tutors">
                    <div class="progress mb-3 mt-1">
                        <div class="progress-bar bg-primary" role="progressbar" style="width:100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">{{noData.[1]}} Tuors</div>
                    </div>
                    </a>
                    <small>Blocked Students</small>
                    <a href="/institution/all-students-different-status/?status=Blocked">
                    <div class="progress mb-3 mt-1">
                        <div class="progress-bar bg-primary" role="progressbar" style="width:100%" aria-valuenow="" aria-valuemin="0" aria-valuemax="100">{{noData.[2]}} Students</div>
                    </div>
                    </a>
                    <small>Blocked Tutors</small>
                    <a href="/institution/all-tutors-different-status/?status=Blocked">
                    <div class="progress mb-3 mt-1">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">{{noData.[3]}} Tutors</div>
                    </div>
                    </a>
                    <small>Classes</small>
                    <div class="progress mt-1">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">{{noData.[4]}} Classes</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3" style="height: 20.7em;">
                    <h4>Subjects</h4>
                    <div class="scrollmenu" style="overflow-y: scroll;">
                        {{#each classes}}
                        <a href="#" class="btn btn-primary m-1">{{this.class_name}}</a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card p-3">
                    <form action="/institution/profile" method="POST" id="institution-signup">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="lname">Name</label>
                                <input type="text" name="name" value="{{institutionDetails.name}}" class="form-control" id="name" style="background: #fff;" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="email" name="email" value="{{institutionDetails.email}}" class="form-control" id="email" style="background: #fff;" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Mobile</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">+91</div>
                                    </div>
                                    <input type="tel" class="form-control" name="mobile" value="{{institutionDetails.mobile}}" id="mobile" style="background: #fff;" disabled>
                                </div>
                                <span id="mobileErr"></span>
                            </div>
                             <div class="form-group col-md-6">
                                <label for="board">Type of Institution</label>
                                <input type="text" name="type" value="{{institutionDetails.type}}" id="type" class="form-control" placeholder="Type" style="background: #fff;" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="board">Board of Institution</label>
                                <input type="text" name="board" value="{{institutionDetails.board}}" id="board" class="form-control" placeholder="Board" style="background: #fff;" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="head">Head of Institution</label>
                                <input type="text" class="form-control" name="head"  value="{{institutionDetails.head}}" id="head" style="background: #fff;" disabled>
                            </div>
                             <div class="form-group col-md-6">
                     <label for="id">Institution ID</label>
                     <div class="input-group">
                        <input class="form-control" type="text" name="id" value="{{institutionDetails.id}}" style="background:white;" id="regenerateInstitutionId" readonly>
                        <span class="input-group-btn">
                           <a class="btn btn-" style="color:white; background-color: #222424;" href="/institution/regenerate-institutionid-update" onclick="return confirm('Are you sure want to change InstitutionID of {{institutionDetails.name}}')"><i class="fas fa-sync-alt"></i></a>
                        </span>
                     </div>
                  </div>                            <div class="form-group col-md-6">
                                <label for="address">Address</label>
                                <textarea rows="3" name="address" class="form-control" id="address" style="background: #fff;" disabled>{{institutionDetails.address}}</textarea>
                            </div>
                            <div class="col-md-12">
                                <button type="button" class="btn btn-primary" id="edit-btn" onclick="editToSaveBtn()">Edit</button>
                                <button type="submit" class="btn btn-primary" id="save-btn" style="display: none;">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="choose-image" tabindex="-1" role="dialog" aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5>Choose Image</h5>
            <div class="delete-img-btn" id="delete-img-btn" onclick="deleteImage()" {{#unless institutionDetails.picture}}hidden{{/unless}}><i class="far fa-trash-alt"></i></div>
            <div class="close-btn" data-dismiss="modal"><i class="fal fa-times"></i></div>
         </div>
         <div class="modal-body">
            <form action="/institution/profile-picture" method="post" enctype="multipart/form-data">
                <div class="text-center">
                    <img src="/images/institution_profile/{{institutionDetails._id}}.jpg" alt="" style="width:200px; height:200px;" id="img-view" class="text-center pb-3" {{#unless institutionDetails.picture}}hidden{{/unless}}>
                </div>
                <div class="custom-file mb-3">
                    <input type="file" name="image" class="custom-file-input" id="customFile" onchange="uploadImage(event)">
                    <label class="custom-file-label" for="customFile" id="img-name">No file chosen</label>
                </div>
               <button type="submit" class="btn btn-primary float-right" id="save-img-btn" disabled>Save</button>
            </form>
         </div>
      </div>
   </div>
</div>



<style>
    .camera-icon {
        position: absolute;
        top: 6em;
        right: calc(47% - 70px);
        background: #007bff;
        color: #fff;
        height: 38px;
        width: 38px;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
    }

    .camera-icon:hover {
        background: #0069d9;
    }

    .delete-img-btn {
        position: absolute;
        color: #878787;
        right: 4.5em;
        cursor: pointer;
    }
</style>



<script>
    function uploadImage(event) {
        document.getElementById('img-view').hidden = false
        document.getElementById('img-view').src = URL.createObjectURL(event.target.files[0])
        document.getElementById('img-name').innerHTML = event.target.files[0].name
        document.getElementById('delete-img-btn').hidden = true
        document.getElementById('save-img-btn').disabled = false
    }

    function deleteImage() {
        document.getElementById('img-view').hidden = true
        document.getElementById('delete-img-btn').hidden = true
        document.getElementById('save-img-btn').disabled = false
    }

   function editToSaveBtn()
   {
      document.getElementById('edit-btn').style.display = 'none'
      document.getElementById('save-btn').style.display = 'block'
      document.getElementById('name').disabled = false
      document.getElementById('email').disabled = false
      document.getElementById('mobile').disabled = false
      document.getElementById('type').disabled = false
      document.getElementById('board').disabled = false
      document.getElementById('head').disabled = false
      document.getElementById('address').disabled = false
      document.getElementById('name').focus()
   }
</script>